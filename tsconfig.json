{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",

    "forceConsistentCasingInFileNames": true,
    
    "strict": false,
    "jsx": "preserve",
    "importHelpers": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "noImplicitAny": false,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "ES6",
      "ES2016.Array.Include"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}
